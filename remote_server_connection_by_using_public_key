ssh-keyscan -t rsa remote_server_ip_or_hostname >> ~/.ssh/known_hosts

cat ~/.ssh/known_hosts

ssh user@remote_server_ip_or_hostname

ssh-keygen -R remote_server_ip_or_hostname

